<div class= "container">
  <div class= "container-restaurants">
<h1>New Restaurant</h1>
<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: 'Select category', input_html: { as: :select} %>
  <%= f.submit "Add Restaurant", class: "btn btn-primary" %>
<% end %>
</div>
</div>
